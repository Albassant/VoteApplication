extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        if (!user)
          p Only registered users can vote. Please, 
            a(href='/register?ref_path=' + ref_path) register
            |  or 
            a(href='/login?ref_path=' + ref_path) log in
            |  to vote.
        else
          p #{ username }
          p #{ votename }
